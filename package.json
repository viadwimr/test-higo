{
  "name": "evomo_e2e",
  "version": "1.0.0",
  "description": "e2e testing all product evomo",
  "main": "index.js",
  "scripts": {
    "test:spec": "cypress run --browser firefox --no-exit --spec cypress/integration/test.js",
    "test:ci": "cypress run --headless --browser chrome --record --key 3fd020b4-96b1-4b64-ab8f-e0ef6e170630",
    "test:e2e": "cypress run --headless --browser chrome",
    "cy:verify": "cypress verify",
    "staging:edge": "npx cypress run --browser edge --spec 'cypress/e2e/' --env allure=true",
    "cy:run": "npx cypress run --env allure=true",
    "allure:report": "allure generate allure-results --clean -o allure-report",
    "allure:clear": "if exist allure-results rmdir /q /s allure-results && if exist allure-report rmdir /q /s allure-report && if exist cypress\\screenshots rmdir /q /s cypress\\screenshots && if exist cypress\\videos rmdir /q /s cypress\\videos",
    "pretest": "npm run allure:clear",
    "test": "npm run cy:run || npm run posttest",
    "posttest": "npm run allure:report"
  },
  "repository": {
    "type": "git",
    "url": "http://gitlab.playcourt.id/amoeba-jeager/evomo_e2e.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@shelex/cypress-allure-plugin": "^2.31.0",
    "allure-commandline": "^2.18.1",
    "cypress": "^10.3.0"
  },
  "devDependencies": {
    "eslint-plugin-cypress": "^2.11.3"
  }
}
